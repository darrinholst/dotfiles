[ui]
#username = Darrin Holst <darrinholst@gmail.com>
username = Darrin Holst <holstdarrin@johndeere.com>
ignore = ~/.hgignore-global

[extensions]
color=
hgext.color=
hgext.churn=
pager=
fetch=
rebase=
mercurial_keyring=

[defaults]
diff = --color=always
log = --color=always
status = --color=always
incoming = --color=always
outgoing = --color=always

[alias]
lg = log --color=always -M --template "\x1B[31m{rev}\x1B[0m - {desc|fill76|tabindent}\x1B[33m ({date|age} by {author|person})\n"

[pager]
pager=LESS='FSRX' less
attend = annotate, cat, diff, export, glog, log, qdiff, lg

