[core]
  ignorecase = false
  excludesfile = ~/.gitignore-global
  editor = "vim"

[user]
  email = darrinholst@gmail.com
  name = Darrin Holst

[github]
  user = darrinholst

[color]
	ui = true

[alias]
  ad = !git add -A && git st
  ci = commit
  st = status
  lg = log -20 --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr by %an)%Creset' --abbrev-commit --date=relative
  up = pull --rebase --prune
  fu = !git add -A && git commit -qm 'FU SAVEPOINT' && git reset --hard HEAD~
  co = checkout
  ec = config --global -e

[push]
	default = tracking

[init]
	templatedir = ~/.git_template

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
