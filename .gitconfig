[core]
  ignorecase = false
  excludesfile = ~/.gitignore-global
  editor = "vim"

[user]
  email = darrinholst@gmail.com
  name = Darrin Holst

[github]
  user = darrinholst

[color]
	ui = true

[alias]
  ad = add -A
  ci = commit
  st = status
  lg = log -20 --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr by %an)%Creset' --abbrev-commit --date=relative
  up = pull --rebase
  fu = !git reset --hard && git clean -fd
  co = checkout


[push]
	default = tracking
[init]
	templatedir = ~/.git_template

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
